sdf-img: \
	../images/LDAPlogo.gif \
	config_dit.png \
	config_local.png \
	config_ref.png \
	config_repl.gif \
	intro_dctree.png \
	intro_tree.png \

guide.html: guide.sdf sdf-src sdf-img
	sdf -2html guide.sdf

index.html: index.sdf sdf-src sdf-img
	sdf -2topics index.sdf

admin.html: admin.sdf sdf-src sdf-img
	sdf -DPDF -2html admin.sdf

guide.pdf: admin.html
	htmldoc --batch guide.book

clean: 
	rm -f *.pdf *.html *~ *.bak
